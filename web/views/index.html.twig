{% extends "base.html" %}

{% block title %} Home {% endblock title %}

{% block content %}
    {% if is_granted('ROLE_USER') %}
        <p>Welcome {{ app.security.token.user.username }}!</p>
        <a href="{{ path('logout') }}">Logout</a>
    {% else %}
        <p>You are not currently logged in</p>
        <a href="{{ path('login') }}">Login</a>
    {% endif %}
{% endblock %}
